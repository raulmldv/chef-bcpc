###############################################################################
# managed by ansible
###############################################################################

{% if ansible_distribution_version == '20.04' %}
remote-control:
    control-enable: {{ 'yes' if 'headnodes' is in group_names else 'no' }}
    control-interface: 127.0.0.1
{% endif %}

server:
    access-control: 0.0.0.0/0 allow
    chroot: ""
    directory: /etc/unbound
    do-ip4: yes
    do-ip6: {{ 'yes' if system_enable_ipv6 else 'no' }}
    do-tcp: yes
    do-udp: yes
    domain-insecure: *
    interface: 127.0.0.1
{% if 'headnodes' is in group_names %}
    interface: {{ cloud_ip }}
{% endif %}
    logfile: ""
    num-threads: 2
    pidfile: /var/run/unbound.pid
    port: 53
    unblock-lan-zones: yes
    use-syslog: yes
    verbosity: 1
{% if 'headnodes' is in group_names %}
    forward-zone:
      name: consul
      forward-addr: {{ cloud_ip }}@8600
{% if unbound_powerdns_enabled %}
    forward-zone:
      name: {{ cloud_domain }}
      forward-addr: {{ cloud_ip }}@5300
{% endif %}
    forward-zone:
      name: .
{% for ns in dns['servers'] %}
      forward-addr: {{ ns }}
{% endfor %}
{% else %}
    forward-zone:
      name: .
      forward-addr: {{ cloud_ip }}
{% endif %}
