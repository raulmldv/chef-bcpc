CREATE DATABASE IF NOT EXISTS <%= @database['dbname'] %>;

CREATE USER IF NOT EXISTS '<%= @database['username'] %>'@'localhost' \
  IDENTIFIED BY '<%= @database['password'] %>';

GRANT ALL PRIVILEGES \
  ON <%= @database['dbname'] %>.* \
  TO '<%= @database['username'] %>'@'localhost';

CREATE USER IF NOT EXISTS '<%= @database['username'] %>'@'%' \
  IDENTIFIED BY '<%= @database['password'] %>';

GRANT ALL PRIVILEGES \
  ON <%= @database['dbname'] %>.* \
  TO '<%= @database['username'] %>'@'%';
