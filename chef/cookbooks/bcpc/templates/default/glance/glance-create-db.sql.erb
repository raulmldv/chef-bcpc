CREATE DATABASE IF NOT EXISTS <%= @db['dbname'] %>;

CREATE USER IF NOT EXISTS '<%= @db['username'] %>'@'localhost' \
  IDENTIFIED BY '<%= @db['password'] %>';

GRANT ALL PRIVILEGES \
  ON <%= @db['dbname'] %>.* \
  TO '<%= @db['username'] %>'@'localhost';

CREATE USER IF NOT EXISTS '<%= @db['username'] %>'@'%' \
  IDENTIFIED BY '<%= @db['password'] %>';

GRANT ALL PRIVILEGES \
  ON <%= @db['dbname'] %>.* \
  TO '<%= @db['username'] %>'@'%';
