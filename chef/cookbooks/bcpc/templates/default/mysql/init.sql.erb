DELETE FROM mysql.user WHERE user='';

ALTER USER IF EXISTS \
  'root'@'localhost' \
  IDENTIFIED WITH 'mysql_native_password' BY '<%= @users['root']['password'] %>';

UPDATE mysql.user \
  SET host='%' WHERE user='root' AND host='localhost';

CREATE USER IF NOT EXISTS \
  'check'@'localhost' \
  IDENTIFIED WITH 'mysql_native_password' BY '<%= @users['check']['password'] %>';

GRANT PROCESS ON *.* \
  TO 'check'@'localhost';

FLUSH PRIVILEGES;
