  option tcpka
  option httpchk GET /healthcheck
  option httplog
  option forwardfor
<% @headnodes.each do |n| -%>
  server <%= n['hostname'] %> <%= n['service_ip'] %>:8774 check inter 5s rise 1 fall 1
<% end -%>

