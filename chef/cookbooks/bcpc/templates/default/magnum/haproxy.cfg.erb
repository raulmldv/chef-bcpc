listen magnum-api
  bind <%= @vip %>:9511 ssl crt /etc/haproxy/haproxy.pem
  balance source
  option tcpka
  option httpchk GET /healthcheck
  option httplog
  option forwardfor
  reqadd X-Forwarded-Proto:\ https
<% @headnodes.each do |n| -%>
  server <%= n['hostname'] %> <%= n['service_ip'] %>:9511 check inter 5s rise 1 fall 1
<% end -%>
